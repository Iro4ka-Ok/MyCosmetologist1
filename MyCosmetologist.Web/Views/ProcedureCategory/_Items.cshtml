@model MyCosmetologist.Web.ViewModel.ProcedureCategoriesViewModel

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="color: teal"><i class="fas fa-pencil-alt fa-lg" style="margin-right: 20px"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" style="color: teal"><i class="fas fa-info-circle fa-lg" style="margin-right: 20px"></i></a>
                    <a style="color: teal" onclick="deleteCategory(@item.Id)"><i class="fas fa-trash-alt fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
