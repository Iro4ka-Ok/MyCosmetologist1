@model MyCosmetologist.Web.ViewModel.ProductsViewModel

    <table class="table">
        <thead>
            <tr>
                <th>
                    Ім'я
                </th>
                <th>
                    Об'єм
                </th>
                <th>
                    Вхідна ціна
                </th>
                <th>
                    Ціна клієнта
                </th>
                <th>
                    Кількість
                </th>
                <th>
                    Категорія
                </th>
                <th>
                    Термін придатності
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Volume)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceFirst)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceLast)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductCategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpirationDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" style="color: teal"><i class="fas fa-pencil-alt fa-lg" style="margin-right: 20px"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" style="color: teal"><i class="fas fa-info-circle fa-lg" style="margin-right: 20px"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" style="color: teal"><i class="fas fa-trash-alt fa-lg"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
